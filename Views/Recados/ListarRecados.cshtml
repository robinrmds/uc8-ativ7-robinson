@model IEnumerable<RecadoOBJ>

@{
    ViewData["Title"] = "Consulta Turmas";
}
<script type="text/javascript" src="~/js/site.js"></script>

<main class="type-user">
    <form class="form-cad-users">
        <div class="">

            <label class="labels" for="consulta">Consulta</label>
            <input type="text" class="inputs" placeholder="Digite uma turma, série, ano letivo ou turno" id="pesquisa" onkeyup="searchInTables('pesquisa','myTableListaRecados')" />
            
            <table id="myTable">
                <thead>
                    <tr>
                        <th>Sequencia</th>
                        <th>Assunto</th>
                        <th>Data da Publicação</th>
                        <th>Ativo</th>
                        <th>Ação</th>
                    </tr>
                </thead>
            
                <tbody id="myTableListaRecados">
                    @foreach (RecadoOBJ recado in Model)
                    {
                        <tr>
                            <td style="text-align: center;">@recado.Sequencia</td>
                            <td style="text-align: center;">@recado.Assunto</td>
                            <td style="text-align: center;">@recado.DataPublicacao</td>
                            @if (recado.Ativo)
                            {
                                <td style="text-align: center;">Ativa</td>
                            }
                            else
                            {
                                <td style="text-align: center;">Desativada</td>
                            }
                            <td style="text-align: center;">
                                <a href="/Recados/EditarRecados?Id=@recado.Id"><i class="bi bi-pencil"></i></a>
                                <a href="/Recados/RemoverRecados?Id=@recado.Id"><i class="bi bi-trash3"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>

    </form>
</main>
