@model IEnumerable<UsuarioOBJ>

@{
    ViewData["Title"] = "Usuário";
}

<main class="type-user">
        <form class="form-cad-users">
            <div class="">

                <label class="labels" for="consulta">Consulta</label>
                <input type="text" class="inputs" placeholder="Digite um nome, matrícula, responsável ou turma" id="consultaUsuario" onkeyup="searchInTables('consultaUsuario','myTbodyListaUsuarios')" />
                
                <table id="table">
                        <thead>
                            <th>Nome</th>
                            <th>Matrícula</th>
                            <th>Responsável</th>
                            <th>Turma</th>
                            <th>Editar</th>
                        </thead>
                
                        <tbody id="myTbodyListaUsuarios">
                            @foreach(UsuarioOBJ usuario in Model){
                            <tr>
                                <td style="text-align: center;">@usuario.Nome</td>
                                <td style="text-align: center;">@usuario.Matricula</td>
                                <td style="text-align: center;">@usuario.ResponsavelNome</td>
                                <td style="text-align: center;">@usuario.TurmaNome</td>
                                <td style="text-align: center;"><a href="/Usuario/EditarUsuarios?Id=@usuario.Id"><i class="bi bi-pencil"></i></a> </td>
                            </tr>
                            }
                        </tbody>
                </table>

            </div>

        </form>
    </main>